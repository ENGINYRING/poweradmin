{
  "name": "poweradmin/poweradmin",
  "description": "A web-based control panel for PowerDNS.",
  "type": "project",
  "homepage": "https://www.poweradmin.org",
  "license": "GPL-3.0-or-later",
  "support": {
    "issues": "https://github.com/poweradmin/poweradmin/issues",
    "forum": "https://github.com/poweradmin/poweradmin/discussions",
    "source": "https://github.com/poweradmin/poweradmin",
    "docs": "https://docs.poweradmin.org"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/poweradmin"
    },
    {
      "type": "other",
      "url": "https://paypal.me/egirkantas"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-intl": "*",
    "ext-gettext": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "cakephp/core": "^5.2.3",
    "cakephp/database": "^5.2.3",
    "cakephp/datasource": "^5.2.3",
    "cakephp/utility": "^5.2.3",
    "jeremykendall/php-domain-parser": "^6.4.0",
    "psr/log": "^3.0.2",
    "robmorgan/phinx": "^0.16.8",
    "symfony/config": "^6.4.14",
    "symfony/console": "^6.4.20",
    "symfony/filesystem": "^v6.4.13",
    "symfony/http-foundation": "^6.4.16",
    "symfony/property-access": "^6.4.18",
    "symfony/serializer": "^6.4.21",
    "symfony/string": "^6.4.15",
    "symfony/translation": "^6.4.19",
    "symfony/twig-bridge": "^6.4.20",
    "symfony/validator": "^6.4.20",
    "twbs/bootstrap": "^5.3.6",
    "twbs/bootstrap-icons": "^1.12.1",
    "twig/twig": "^3.21.1"
  },
  "suggest": {
    "ext-ldap": "For LDAP support"
  },
  "autoload": {
    "psr-4": {
      "Poweradmin\\": "lib/",
      "PoweradminInstall\\": "install/helpers",
      "TestHelpers\\": "tests/helpers"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5.2",
    "squizlabs/php_codesniffer": "^3.11.2",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.67",
    "vimeo/psalm": "^6.10.1",
    "phpmd/phpmd": "^2.15",
    "zircote/swagger-php": "^5.1.1"
  },
  "scripts": {
    "docs": "tools/phpDocumentor",

    "tests": "phpunit --testsuite unit",
    "tests:integration": "phpunit --testsuite integration",

    "check:all": "phpcs --standard=phpcs.xml addons config db index.php install lib tests dynamic_update.php",
    "format:all": "phpcbf --standard=phpcs.xml addons config db index.php install lib tests dynamic_update.php",
    "style:all": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix -- addons config db index.php install lib tests dynamic_update.php",
    "analyse:phpstan": "phpstan analyse --level=2 addons config db index.php install lib tests dynamic_update.php",
    "analyse:psalm": "psalm",
    "quality:all": "phpmd addons,config,db,index.php,install,lib,dynamic_update.php ansi phpmd.xml",
    "analyse:all": [
        "@check:all",
        "@analyse:psalm",
        "@analyse:phpstan"
    ],

    "post-create-project-cmd": [
      "rm -rf install/",
      "rm -rf tests/"
    ]
  },
  "archive": {
    "exclude": [
      ".devcontainer",
      ".github",
      "cypress/",
      "install/",
      "tests",
      ".dockerignore",
      ".gitignore",
      ".php-cs-fixer.php",
      "cypress.config.js",
      "DONORS.md",
      "package.json",
      "phinx.php",
      "phpcs.xml",
      "phpdoc.dist.xml",
      "phpunit.xml.dist",
      "psalm.xml",
      "transifex.yml"
    ]
  }
}
