parameters:
  excludePaths:
    - vendor
  ignoreErrors:
    # Ignore errors in test files related to mocking
    - '#Call to an undefined method .+::expects\(\).#'
    # Ignore constructor unused parameter errors
    - '#Constructor of class .+ has an unused parameter \$_config.#'
    # Ignore other specific warnings
    - '#Method .+::validateIfaceIndex\(\) returns void but does not have any side effects.#'
    - '#PHPDoc tag @param for parameter \$dbType with type mixed is not subtype of native type string.#'
