{% extends 'base.html.twig' %}

{% block step_description %}{% trans %}Getting Ready{% endtrans %}{% endblock %}

{% block content %}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            {% trans %}Step{% endtrans %} {{ current_step }}: {% trans %}Getting Ready{% endtrans %}
        </div>
        <div class="card-body">
            <div class="alert alert-info py-2 mb-3">
                <strong>{% trans %}Preparation:{% endtrans %}</strong> {% trans %}Let's get your PowerDNS database ready for Poweradmin.{% endtrans %}
            </div>

            <div class="card mb-3 bg-light">
                <div class="card-header">
                    <strong>{% trans %}About PowerDNS{% endtrans %}</strong>
                </div>
                <div class="card-body">
                    <p>{% trans %}PowerDNS is a DNS server that stores its data in an SQL database. Poweradmin will help you manage this database via a web interface.{% endtrans %}</p>
                    <p>{% trans %}Before proceeding, you should have:{% endtrans %}</p>
                    <ul>
                        <li>{% trans %}An operational PowerDNS installation{% endtrans %}</li>
                        <li>{% trans %}Database connectivity details (hostname, username, password){% endtrans %}</li>
                        <li>{% trans %}Administrative access to your database{% endtrans %}</li>
                    </ul>
                </div>
            </div>

            <div class="card mb-3 bg-light">
                <div class="card-header">
                    <strong>{% trans %}Database Preparations{% endtrans %}</strong>
                </div>
                <div class="card-body">
                    <p>{% trans %}In the next steps, Poweradmin will:{% endtrans %}</p>
                    <ol>
                        <li>{% trans %}Connect to your PowerDNS database{% endtrans %}</li>
                        <li>{% trans %}Create tables needed for Poweradmin functionality{% endtrans %}</li>
                        <li>{% trans %}Set up an administrator account for web access{% endtrans %}</li>
                        <li>{% trans %}Create a config file to store your settings{% endtrans %}</li>
                    </ol>
                    <div class="alert alert-warning py-2">
                        <i class="bi bi-exclamation-triangle"></i> 
                        <strong>{% trans %}Note:{% endtrans %}</strong>{% trans %}You will need database administrative privileges for the installation.{% endtrans %}
                    </div>
                </div>
            </div>

            <!-- Form for continuing -->
            <form method="post">
                <input type="hidden" name="install_token" value="{{ install_token }}">
                <input type="hidden" name="language" value="{{ language }}">
                <input type="hidden" name="step" value="{{ next_step }}">
                <div class="mt-4 text-center">
                    <input type="submit" name="submit" class="btn btn-sm btn-primary" 
                           value="{% trans %}Continue to step{% endtrans %} {{ next_step }}">
                </div>
            </form>
        </div>
    </div>
{% endblock %}